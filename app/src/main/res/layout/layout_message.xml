<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:id="@+id/cardview"
        android:elevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/primary_dark">

            <TextView
                android:id="@+id/message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="hello"
                android:padding="5dp"
                android:textColor="@color/white"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/date"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="end"
                android:text="19-11-2015"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:weightSum="5">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="center">

                    <!--<com.like.LikeButton-->
                        <!--android:backgroundTintMode="add"-->
                        <!--android:id="@+id/favorite"-->
                        <!--android:background="@color/primary_dark"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--app:anim_scale_factor="2"-->
                        <!--app:circle_end_color="@color/primary"-->
                        <!--app:circle_start_color="@color/primary"-->
                        <!--app:dots_primary_color="@color/primary"-->
                        <!--app:dots_secondary_color="@color/primary"-->
                        <!--android:foregroundTint="@color/primary"-->
                        <!--app:icon_size="24dp"-->
                        <!--app:icon_type="star"-->
                        <!--app:liked="false" />-->
                    <ImageButton
                        android:layout_width="24dp"
                        android:tint="@color/white"
                        android:id="@+id/favorite"
                        android:background="@color/primary_dark"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_favorite_white_24dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageButton
                        android:layout_width="24dp"
                        android:id="@+id/copy"
                        android:layout_height="24dp"
                        android:tint="@color/white"
                        android:background="@color/primary_dark"
                        android:src="@drawable/ic_content_copy_white_24dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageButton
                        android:layout_width="24dp"
                        android:tint="@color/white"
                        android:id="@+id/share"
                        android:background="@color/primary_dark"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_share_white_24dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageButton
                        android:layout_width="24dp"
                        android:id="@+id/delete"
                        android:background="@color/primary_dark"
                        android:layout_height="24dp"
                        android:tint="@color/white"
                        android:src="@drawable/ic_delete_white_24dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageButton
                        android:layout_width="24dp"
                        android:id="@+id/edit"
                        android:background="@color/primary_dark"
                        android:layout_height="24dp"
                        android:tint="@color/white"
                        android:src="@drawable/ic_mode_edit_white_24dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>